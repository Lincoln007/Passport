<script type="text/javascript">
    @{
        Exception exception = ViewBag.Error;
        var target = string.IsNullOrEmpty(Request["target"]) ? "top" : Request["target"];
        Layout = null;
        if (exception != null)
        {
        <text>
    alert("@(exception.Message)");
    </text>
        }
        else
        {
        <text>
    window.@(target).location.href = "@(Html.Raw(ViewBag.ReturnUrl))";
    </text>
        }
}
</script>
